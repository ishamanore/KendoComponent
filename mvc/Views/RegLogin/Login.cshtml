<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.616/styles/kendo.common.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2021.2.616/styles/kendo.default.min.css" />
    <link href="https://kendo.cdn.telerik.com/2023.1.117/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2023.1.117/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
        <script src="/js/Login.js"> </script>
    <title>Document</title>
    @if( TempData["loginfail"] != null){
        <script>
            alert("@TempData["loginfail"]");
        </script>
    }

    <script>
        $(document).ready(function () {
            $("#btn").kendoButton({
                themeColor: "primary",
            });
        });
    </script>
    <script>
        function validateForm() {
        var isEmailValid = email();
        var isPasswordValid = password();
        var isCheckboxChecked = checkbox();

        return isEmailValid && isPasswordValid && isCheckboxChecked;
    }
    </script>
    
</head>

<body>
    <form asp-action="Login" method="post" asp-controller="RegLogin" id="loginform" class="k-form k-form-vertical" onsubmit="return validateForm()">
        <div class="container card  shadow-lg p-3 mb-5 bg-white rounded"  style="width: 35%; margin-top: 120px;">
            <legend class="text-center">LogIn</legend>
            <div class="k-form-field mb-3">
                <label for="c_email" class="k-form-label">Email :</label>
                <input type="text" name="c_email" id="c_email" class="k-textbox" onkeyup="email()"><br>
                <span id="email" class="text-danger small"></span>
            </div>
            <div class="k-form-field mb-3">
                <label for="c_password" class="k-form-label">Password :</label>
                <input type="password" name="c_password" id="c_password" class="k-textbox" onkeyup="password()"><br>
                <span id="password" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <input type="checkbox" class="k-checkbox" id="c_terms" onclick="checkbox()">
                <label for="c_terms">Accept All Terms & conditions.</label><br>
                <span id="checkbox" class="text-danger small"></span>
            </div>
            <div class="k-form-field mb-3">
                <button type="submit" class="mb-3 " id="btn" style="width: 20%;">LogIn</button>
            </div>
        </div>
    </form>
</body>


</html>